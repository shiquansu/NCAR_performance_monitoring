            "enabled": true,
            "resource_id": 1,
            "batch_system": "XDMoD",
            "hostname_mode": "hostname",
            "pcp_log_dir": "/home/xdmod/data/pcp-logs/yellowstone",
            "script_dir": ""
        }
    }
